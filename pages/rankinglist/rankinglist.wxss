/* pages/rankinglist/rankinglist.wxss */
.tuijianbox{
    padding:20rpx;
}
.tuijiantitle{
    font-weight: 700;
    font-size: 32rpx;
}
.tuijianlist{
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-gap: 30rpx;
    height: 300rpx;
}
.tuijian_nav{
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}
.tuijian_img{
    width: 100%;
    height: 220rpx;
    border-radius: 20rpx;
    /* margin: 20rpx; */
}
.ranking{
    padding: 20rpx;
}
.bangdanlist{
    margin-top: 20rpx;
    width: 100%;
    /* border: 1px solid #ccc; */
}
.bangdan{
    height: 220rpx;
    display: flex;
    margin-bottom: 20rpx;
}
.song{
    flex: 2;
    padding: 20rpx;
    display: flex;
    flex-direction: column;

}
.bangdan_img{
    flex: 1;
    /* width: 100%; */
    height: 100%;
    border-radius: 20rpx;
}
.song_text{
    flex: 1;
}
/* 更多榜单 */
.moretitle{
    margin-left: 20rpx;
    font-weight: 700;
    font-size: 32rpx;
}
.sheetbox{
    float: left;
    width: 30%;
    /* border: 1px solid #ccc; */
    height: 300rpx;
    margin: 12rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
}
.sheet_img{
    width: 100%;
    height: 220rpx;
    border-radius: 15rpx;
}
.sheet_text{
    font-size: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
}