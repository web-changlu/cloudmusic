/* pages/bofang/bofang.wxss */
.songlist{
    padding: 20rpx;
}
.song{
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
}
.songindex{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 60rpx;
    color: #ccc;
}
.left{
    flex: 3;
}
.left image{
    width: 100%;
    height: 100%;
    padding: 10rpx;
    border-radius: 46rpx;
}
.right{
    flex: 6;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    justify-content: center;
    overflow: hidden;
}
.yc{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;

}
.chucu{
    color: #ccc;
}
.fl{
    float: left;
}